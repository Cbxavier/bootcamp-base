@model IEnumerable<Tarefas.Web.Models.TarefaViewModel>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Concluida)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.Concluida</td>
                <td>
                    <button class="btn btn-outline-success"><a asp-controller="Tarefa" asp-action="Details" asp-route-id="@item.Id">Detalhes</a></button>
                    <button class="btn btn-outline-primary"><a asp-controller="Tarefa" asp-action="Update" asp-route-id="@item.Id">Editar</a></button>
                    <button class="btn btn-outline-danger"><a asp-controller="Tarefa" asp-action="Delete" asp-route-id="@item.Id">Excluir</a><button>
                </td>
            </tr>
        }
    </tbody>
</table>

